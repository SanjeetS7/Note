<!DOCTYPE html>
<head>
<meta charset="utf-8" />
<HTA:Application
  ApplicationName = Note
  Border = Thick
  SingleInstance = yes
  Scroll = no
>
<title>Note</title>
<link href='_note.css' rel='stylesheet' type='text/css'>
</head>
<body>

<div id='upperRightBox'>
<button id='closeButton' class='upperRightButton' onclick='window.close();'>Close</button>
<button id='optionsButton' class='upperRightButton' onclick='showOptions();'>Options</button>
<button id='newButton' class='upperRightButton' onclick='showNewNoteBox();'>New Note</button>
</div>

<div id='noteList'></div>

<hr>

<h3 id='noteTitle'></h3>
<div id='noteBody'></div>

<div id='newNoteDiv'>
  <form name='newNoteForm' onsubmit='createNewNote(newNoteInputBox.value);' action='#' >
    <input type='text' size=20 id='newNoteInputBox' />
    <input type='submit' value='Create' />
  </form>
</div>

<div id='inputDiv'>
  <form name='inputForm' onsubmit='onSubmitted(inputBox.value, currentNote);' action='#' >
    <input type='text' size=100 id='inputBox' />
    <input type='submit' value='Add' />
  </form>
</div>

<div id='optionsDiv'>
  <br />
  <table><tr>
  <td class='optionsColumn'>
  <h4>Time Stamp:</h4>
  <label><input type='radio' name='timeStamp' class='optionInput' value='Hide' /> Hide&nbsp;<span class='goItalic'>(default)</span></label><br />
  <label><input type='radio' name='timeStamp' class='optionInput' value='Show' /> Show</label>
  <br /><br />
  <h4>Background Color:</h4>
  <label><input type='radio' name='bg' class='optionInput' value='gray' /> Gray &nbsp;<span class='goItalic'>(default)</span></label><br />
  <label><input type='radio' name='bg' class='optionInput' value='yellow' /> Yellow</label><br />
  <label><input type='radio' name='bg' class='optionInput' value='white' /> White</label><br />
  <label><input type='radio' name='bg' class='optionInput' value='pink' /> Pink</label><br />
  <label><input type='radio' name='bg' class='optionInput' value='green' /> Green</label><br />
  <label><input type='radio' name='bg' class='optionInput' value='blue' /> Blue</label>
  </td>
  <td class='optionsColumn'>
  <h4>Note Font:</h4>
  <label class='georgia'><input type='radio' name='font' class='optionInput' value='georgia' /> Georgia</label><br />
  <label class='calibri'><input type='radio' name='font' class='optionInput' value='calibri' /> Calibri</label><br />
  <label class='sans'><input type='radio' name='font' class='optionInput' value='sans' /> Sans Serif</label><br />
  <label class='serif'><input type='radio' name='font' class='optionInput' value='serif' /> Serif &nbsp;<span class='goItalic'>(default)</span></label><br />
  <label><input type='radio' name='font' id='localFontCheckBox' class='optionInput' value='local' />
    <div id='localFontDiv'> <span class='smallFont'>Choose a local font:</span>
    <form name='localFontForm' id='localFontForm' disabled=true onsubmit='setLocalFont(localFontBox.value);' action='#' >
      <input type='text' size=10 id='localFontBox' />
      <input class='optionChangeButton' type='submit' value='Set' />
    </form>
    </div>
    <div id='localFontShow'>
      <p id='localFontShowP'></p><button id='changeLocalFontButton' class='optionChangeButton' onclick='getLocalFont();'>Change</button>
    </div>
  </label><br />
  </td>
  <td class='optionsColumn'>
  <h4>Note Font Size:</h4>
  <label class='smallFont'><input type='radio' name='textSize' class='optionInput' value='small'> Small</label><br />
  <label class='mediumFont'><input type='radio' name='textSize' class='optionInput' value='medium'> Medium &nbsp;<span class='goItalic'>(default)</span></label><br />
  <label class='largeFont'><input type='radio' name='textSize' class='optionInput' value='large'> Large</label>
  </td>
  </tr></table>
</div>

<script language='vbscript' src='_note.vbs'></script>
<script language='javascript' src='_note.js'></script>

</body>
</html>